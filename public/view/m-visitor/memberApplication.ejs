        }

        #informReferences:checked::after,
        #agreeTerms:checked::after {
            content: '✓';
            color: white;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 0.8rem;
        }

        #informReferences:disabled:checked,
        #agreeTerms:disabled:checked {
            background-color: #dc2626;
            border-color: #dc2626;
            opacity: 1;
        }
    </style>
