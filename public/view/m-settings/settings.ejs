<script>
  async function saveChanges() {
    const phoneNumber = document.getElementById('phone-number-input').value;
    const companyName = document.getElementById('company-name-input').value;
    const companyAddress = document.getElementById('company-address-input').value;
    const emailInput = document.getElementById('email-address-input').value;
    const gstNumber = document.getElementById('company-gstin-input').value;
    const loggedInEmail = localStorage.getItem('loggedInEmail');
    
    // Get member photo from input
    const memberPhotoInput = document.getElementById('member-photo-input');
    let memberPhotoData = '';
    let memberPhotoName = '';
    
    // Check if a new file is selected
    if (memberPhotoInput.files && memberPhotoInput.files[0]) {
        const file = memberPhotoInput.files[0];
        const fileExtension = file.name.split('.').pop();
        const timestamp = Date.now();
        memberPhotoName = `/home/mindaviator/Desktop/expenses1/bni/public/assets/memberProfileImage/member_${timestamp}.${fileExtension}`;
        
        // Convert file to base64
        const reader = new FileReader();
        memberPhotoData = await new Promise((resolve) => {
            reader.onload = (e) => resolve(e.target.result);
            reader.readAsDataURL(file);
        });
    }
    
    // Get social links values directly from the input fields
    const facebook = document.getElementById('facebook').value.trim();
    const instagram = document.getElementById('Instagram').value.trim();
    const youtube = document.getElementById('Youtube').value.trim();
    const linkedin = document.getElementById('Linkedin').value.trim();

    // Phone number validation
    if (phoneNumber.length !== 10) {
        toastr.error("Phone number must be exactly 10 digits", "Error");
        return;
    }

    // Basic validations
    if (!phoneNumber || !companyName || !companyAddress || !emailInput) {
        toastr.error("Please fill in all required fields", "Error");
        return;
    }

    try {
        const updatedData = {
            member_email_address: emailInput,
            old_email_address: loggedInEmail,
            member_phone_number: phoneNumber,
            member_company_address: companyAddress,
            member_company_name: companyName,
            member_gst_number: gstNumber,
            member_facebook: facebook,
            member_instagram: instagram,
            member_youtube: youtube,
            member_linkedin: linkedin,
            member_photo: memberPhotoData || '',  // Send the actual image data
            member_photo_name: memberPhotoName    // Send the full path filename
        };

        console.log('Sending request with data:', updatedData);
        const response = await fetch('http://localhost:5000/api/updateMemberSettings', {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify(updatedData)
        });

        if (!response.ok) {
            throw new Error('Update failed');
        }

        const data = await response.json();

        if (data.message === "Member settings updated successfully") {
            if (emailInput !== loggedInEmail) {
                localStorage.setItem('loggedInEmail', emailInput);
            }
            
            toastr.success("Changes have been saved successfully!", "Success");
            
            // Refresh company info to show updated data
            if (typeof displayCompanyInfo === 'function') {
                displayCompanyInfo();
            }
        }

        const modal = bootstrap.Modal.getInstance(document.getElementById('confirmationModal'));
        if (modal) {
            modal.hide();
        }

    } catch (error) {
        console.error('Error:', error);
        toastr.error(error.message || "Error saving changes. Please try again.", "Error");
    }
  }

  // Add event listener for member photo upload preview
  document.getElementById('member-photo-input').addEventListener('change', function(event) {
    const file = event.target.files[0];
    const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png'];
    
    // Check if file exists and validate type
    if (file) {
        if (!allowedTypes.includes(file.type)) {
            toastr.error('Only JPG, JPEG and PNG files are allowed', 'Invalid File Type');
            this.value = ''; // Clear the file input
            return;
        }

        // Check file size (optional, set to 5MB here)
        const maxSize = 5 * 1024 * 1024; // 5MB in bytes
        if (file.size > maxSize) {
            toastr.error('File size should not exceed 5MB', 'File Too Large');
            this.value = ''; // Clear the file input
            return;
        }

        const reader = new FileReader();
        reader.onload = function(e) {
            const photoPreview = document.getElementById('member-photo-preview');
            const noPhotoMessage = document.getElementById('no-photo-message');
            
            photoPreview.src = e.target.result;
            photoPreview.style.display = 'block';
            noPhotoMessage.style.display = 'none';
        };
        reader.readAsDataURL(file);
    }
  });

  // Phone number input validation
  document.getElementById('phone-number-input').addEventListener('input', function(e) {
    this.value = this.value.replace(/[^0-9]/g, '');
    if (this.value.length > 10) {
        this.value = this.value.slice(0, 10);
    }
  });

  // Email input validation
  document.getElementById('email-address-input').addEventListener('input', function(e) {
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(this.value) && this.value.length > 0) {
        this.classList.add('is-invalid');
        // Optional: Show immediate feedback
        toastr.warning("Please enter a valid email address", "Warning");
    } else {
        this.classList.remove('is-invalid');
    }
  });

  // Company name input validation - limit to 50 characters
  document.getElementById('company-name-input').addEventListener('input', function(e) {
    if (this.value.length > 50) {
        this.value = this.value.slice(0, 50);
        toastr.warning("Company name cannot exceed 50 characters", "Warning");
    }
  });

  // Company address input validation - limit to 150 characters
  document.getElementById('company-address-input').addEventListener('input', function(e) {
    if (this.value.length > 150) {
        this.value = this.value.slice(0, 150);
        toastr.warning("Company address cannot exceed 150 characters", "Warning");
    }
  });

  // GST number input validation - Show popup only when user tries to modify the value
  document.getElementById('company-gstin-input').addEventListener('input', function(e) {
    // Get the original value
    const originalValue = this.getAttribute('data-original');
    
    // If user tries to change the value, show popup and revert the change
    if (this.value !== originalValue) {
        // Show GST update notification modal
        const gstModal = new bootstrap.Modal(document.getElementById('gstUpdateModal'));
        gstModal.show();
    }
  });

  // Add event listener to OK button in GST modal
  document.querySelector('#gstUpdateModal .btn-primary').addEventListener('click', function() {
    const gstInput = document.getElementById('company-gstin-input');
    const originalValue = gstInput.getAttribute('data-original');
    gstInput.value = originalValue;
  });

  // Store original GST number when page loads
  document.addEventListener('DOMContentLoaded', function() {
    const gstInput = document.getElementById('company-gstin-input');
    if (gstInput) {
        gstInput.setAttribute('data-original', gstInput.value);
    }
  });

  // Improve URL validation for social links
  const validateUrl = (url) => {
    if (!url) return true; // Empty URLs are allowed
    try {
        new URL(url);
        return true;
    } catch {
        return false;
    }
  };

  const socialInputs = ['facebook', 'Instagram', 'Youtube', 'Linkedin'];
  
  socialInputs.forEach(id => {
    document.getElementById(id).addEventListener('input', function(e) {
        let value = this.value.trim();
        
        // Add https:// if not present and there's a value
        if (value && !value.match(/^https?:\/\//)) {
            value = 'https://' + value;
            this.value = value;
        }

        // Validate URL
        if (value && !validateUrl(value)) {
            this.classList.add('is-invalid');
            toastr.warning(`Please enter a valid URL for ${id}`, "Warning");
        } else {
            this.classList.remove('is-invalid');
        }
    });
  });

  // Function to load social links
  async function loadSocialLinks() {
    try {
        const loggedInEmail = localStorage.getItem('loggedInEmail');
        const response = await fetch(`http://localhost:5000/api/getMemberSocialLinks?email=${loggedInEmail}`);
        
        if (!response.ok) {
            throw new Error('Failed to load social links');
        }

        const data = await response.json();
        
        // Update social link inputs and handle null values
        if (data.social_links) {
            const links = data.social_links;
            document.getElementById('facebook').value = links.facebook || '';
            document.getElementById('Instagram').value = links.instagram || '';
            document.getElementById('Youtube').value = links.youtube || '';
            document.getElementById('Linkedin').value = links.linkedin || '';
        }

        console.log('Loaded social links:', data.social_links); // Debug log
    } catch (error) {
        console.error('Error loading social links:', error);
        toastr.error("Failed to load social links", "Error");
    }
  }

  // Call loadSocialLinks when page loads
  document.addEventListener('DOMContentLoaded', function() {
    loadSocialLinks();
  });
</script>

