      <div class="main-content app-content">


    <h1 class="page-title fw-medium fs-18 mb-0">
      <span style="font-weight: 700; font-family: Poppins"><%= title %></span>
    </h1>
    <p>Manage banners from here</p>
    <!-- manage-banners.ejs -->

    <% if (banners && banners.length > 0) { %>
    <table class="table table-bordered table-hover align-middle mt-4">
      <thead class="table-dark">
        <tr>
          <th scope="col">Image</th>
          <th scope="col">Heading</th>
          <th scope="col">Description</th>
          <th scope="col">Status</th>
          <th scope="col">Buttons</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% banners.forEach(banner => { %>
        <tr>
          <td>
            <% if (banner.banner_image) { %>
            <img
              src="https://backend.bninewdelhi.com/uploads/banners/<%= banner.banner_image %>"
              width="300"
              class="img-thumbnail"
            />
            <% } else { %> 
            <span class="text-muted">No Image</span>
            <% } %>
          </td>
          <td><%= banner.banner_heading %></td>
          <td><%= banner.banner_description %></td>
          <td>
            <span class="badge <%= banner.banner_status ? 'bg-success' : 'bg-secondary' %>">
              <%= banner.banner_status ? "Enabled" : "Disabled" %>
            </span>
          </td>
          <td>
            <% for (let i = 0; i <= 1; i++) { %> 
              <% if (banner[`banner_button_${i}_status`]) { %>
                <div class="mb-2">
                  <span class="fw-semibold"><%= banner[`banner_button_${i}_text`] %></span>
                  <br>
                  <small class="text-muted"><%= banner[`banner_button_${i}_link`] %></small>
                </div>
              <% } %> 
            <% } %>
          </td>
          <td>
            <div class="d-flex gap-2">
              <form>
                <a class="btn btn-primary btn-sm" href="/bann/edit-banner?id=<%= banner.id %>">Edit</a>
              </form>
              <form
                action="/delete-banner/<%= banner.id %>"
                method="GET"
                onsubmit="return confirm('Are you sure you want to delete this banner?');"
                class="d-inline"
              >
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </div>





            
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } else { %>
    <p class="alert alert-warning mt-4">No banners found.</p>
    <% } %>
      </div>
