<script>
// Define helper functions in global scope
function formatDate(dateString) {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-IN', {
    day: '2-digit',
    month: 'short',
    year: 'numeric'
  });
}

function formatCurrency(amount) {
  return new Intl.NumberFormat('en-IN', {
    style: 'currency',
    currency: 'INR'
  }).format(amount);
}

function showLoader() {
  document.getElementById("loader").style.display = "flex";
}

function hideLoader() {
  document.getElementById("loader").style.display = "none";
}

// Define loadVendorLedger in global scope
async function loadVendorLedger(vendorId) {
  try {
    showLoader();
    
    // Fetch vendor details
    const vendorsResponse = await fetch('https://backend.bninewdelhi.com/api/getAllVendors');
    const vendors = await vendorsResponse.json();
    const vendor = vendors.find(v => v.vendor_id === parseInt(vendorId));

    if (!vendor) {
      throw new Error('Vendor not found');
    }

    // Fetch vendor's expenses
    const expensesResponse = await fetch(`https://backend.bninewdelhi.com/api/vendor-expenses/${vendorId}`);
    const expensesData = await expensesResponse.json();

    // Ensure expenses is an array
    const expenses = Array.isArray(expensesData) ? expensesData : 
                    expensesData.expenses ? expensesData.expenses : [];

    console.log('Fetched expenses:', expenses); // Debug log

    // Update vendor info in modal
    document.querySelector('.vendor-name').textContent = vendor.vendor_name;
    document.querySelector('.vendor-company').textContent = vendor.vendor_company_name;
    document.querySelector('.vendor-contact').textContent = `${vendor.phone_number} | ${vendor.email_id}`;

    // Calculate totals - with type checking
    const totalAmount = expenses.length > 0 ? 
      expenses.reduce((sum, exp) => sum + (parseFloat(exp.amount) || 0), 0) : 0;
    document.querySelector('.total-expenses .amount').textContent = formatCurrency(totalAmount);

    // Get last expense date
    let lastExpense = 'No expenses';
    if (expenses.length > 0) {
      const validDates = expenses
        .filter(exp => exp.bill_date)
        .sort((a, b) => new Date(b.bill_date) - new Date(a.bill_date));
      
      if (validDates.length > 0) {
        lastExpense = formatDate(validDates[0].bill_date);
      }
    }
    document.querySelector('.last-expense .date').textContent = lastExpense;

    // Populate expense table
    const tableBody = document.getElementById('vendorLedgerTable').querySelector('tbody');
    tableBody.innerHTML = '';

    if (!expenses.length) {
      document.getElementById('noExpensesMessage').style.display = 'block';
      document.getElementById('vendorLedgerTable').style.display = 'none';
    } else {
      document.getElementById('noExpensesMessage').style.display = 'none';
      document.getElementById('vendorLedgerTable').style.display = 'table';

      expenses.forEach(expense => {
        // Ensure all required fields exist
        const safeExpense = {
          bill_date: expense.bill_date || 'N/A',
          expense_type_name: expense.expense_type_name || 'N/A',
          description: expense.description || 'N/A',
          amount: expense.amount || 0,
          withGST: expense.withGST || false,
          gstPercentage: expense.gstPercentage || 0,
          totalAmount: expense.totalAmount || expense.amount || 0,
          payment_status: expense.payment_status || 'pending',
          upload_bill: expense.upload_bill || '#'
        };

        const row = document.createElement('tr');
        row.innerHTML = `
          <td>${formatDate(safeExpense.bill_date)}</td>
          <td>${safeExpense.expense_type_name}</td>
          <td>${safeExpense.description}</td>
          <td>${formatCurrency(safeExpense.amount)}</td>
          <td>${safeExpense.withGST ? `${safeExpense.gstPercentage}%` : 'N/A'}</td>
          <td>${formatCurrency(safeExpense.totalAmount)}</td>
          <td>
            <span class="badge bg-${safeExpense.payment_status === 'paid' ? 'success' : 'warning'}">
              ${safeExpense.payment_status}
            </span>
          </td>
          <td>
            <a href="${safeExpense.upload_bill}" target="_blank" class="btn btn-sm btn-info view-bill-btn">
              <i class="ri-file-text-line"></i> View
            </a>
          </td>
        `;
        tableBody.appendChild(row);
      });
    }

    // Show the modal
    const vendorLedgerModal = document.getElementById('vendorLedgerModal');
    const bootstrapModal = new bootstrap.Modal(vendorLedgerModal);
    bootstrapModal.show();

  } catch (error) {
    console.error('Error loading vendor ledger:', error);
    Swal.fire('Error!', 'Failed to load vendor ledger', 'error');
  } finally {
    hideLoader();
  }
}

document.addEventListener("DOMContentLoaded", async function() {
  // Get user details
  const userEmail = getUserEmail();
  const userType = getUserLoginType();
  let currentChapterId = null;

  // Get chapter ID for the logged-in user
  async function getCurrentChapterId() {
    try {
      const response = await fetch("https://backend.bninewdelhi.com/api/chapters");
      const chapters = await response.json();
      const userChapter = chapters.find(chapter =>
        chapter.email_id === userEmail ||
        chapter.vice_president_mail === userEmail ||
        chapter.president_mail === userEmail ||
        chapter.treasurer_mail === userEmail
      );
      return userChapter ? userChapter.chapter_id : null;
    } catch (error) {
      console.error('Error getting chapter ID:', error);
      return null;
    }
  }

  // Function to fetch and display vendors
  async function loadVendors() {
    try {
      showLoader();
      
      // Get current chapter ID if not already set
      if (!currentChapterId) {
        currentChapterId = await getCurrentChapterId();
      }

      const response = await fetch('https://backend.bninewdelhi.com/api/getAllVendors');
      const vendors = await response.json();

      // Filter vendors for current chapter
      const chapterVendors = vendors.filter(vendor => vendor.chapter_id === currentChapterId);

      const tableBody = document.getElementById('vendorsTableBody');
      tableBody.innerHTML = '';

      chapterVendors.forEach((vendor, index) => {
        const row = document.createElement('tr');
        row.innerHTML = `
          <td style="border: 1px solid grey;">${index + 1}</td>
          <td style="border: 1px solid grey;"><b>${vendor.vendor_name}</b></td>
          <td style="border: 1px solid grey;"><b>${vendor.vendor_company_name}</b></td>
          <td style="border: 1px solid grey;"><b>${vendor.phone_number}</b></td>
          <td style="border: 1px solid grey;"><b>${vendor.email_id}</b></td>
          <td style="border: 1px solid grey;"><b>${vendor.vendor_company_gst || 'N/A'}</b></td>
          <td style="border: 1px solid grey;">
            <b>Bank: ${vendor.vendor_bank_name}</b><br>
            <b>A/C: ${vendor.vendor_account}</b><br>
            <b>IFSC: ${vendor.vendor_ifsc_code}</b>
          </td>
          <td style="border: 1px solid grey;">
            <span class="badge bg-${vendor.vendor_status === 'active' ? 'success' : 'warning'}">
              ${vendor.vendor_status}
            </span>
          </td>
          <td style="border: 1px solid grey;">
            <div class="btn-group">
              <button class="btn btn-sm btn-primary edit-vendor" data-vendor-id="${vendor.vendor_id}">
                <i class="ri-edit-line me-1"></i>Edit
              </button>
              <button class="btn btn-sm btn-${vendor.vendor_status === 'active' ? 'warning' : 'success'} toggle-status" data-vendor-id="${vendor.vendor_id}" data-current-status="${vendor.vendor_status}">
                <i class="ri-${vendor.vendor_status === 'active' ? 'close-circle-line' : 'check-line'} me-1"></i>${vendor.vendor_status === 'active' ? 'Deactivate' : 'Activate'}
              </button>
              <button type="button" class="btn btn-sm btn-info" onclick="loadVendorLedger(${vendor.vendor_id})">
                <i class="ri-file-list-line me-1"></i>View Ledger
              </button>
            </div>
          </td>
        `;
        tableBody.appendChild(row);
      });
    } catch (error) {
      console.error('Error loading vendors:', error);
      Swal.fire('Error!', 'Failed to load vendors', 'error');
    } finally {
      hideLoader();
    }
  }

  // Export Ledger button handler
  document.getElementById('exportLedgerBtn').addEventListener('click', function() {
    Swal.fire('Coming Soon!', 'Export functionality will be available soon.', 'info');
  });

  // Initial load of vendors
  await loadVendors();
});
</script>

