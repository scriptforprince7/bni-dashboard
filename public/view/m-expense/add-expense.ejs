    try {
      const response = await fetch('https://backend.bninewdelhi.com/api/getAllVendors');
      if (!response.ok) throw new Error('Failed to fetch vendors');
      return await response.json();
    } catch (error) {
      console.error('Error fetching vendors:', error);
      throw error;
    }
  }

