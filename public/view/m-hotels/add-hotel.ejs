    <form id="addZoneForm" enctype="multipart/form-data">
    <div class="row">
      <div class="col-xl-12">
        <div class="card custom-card">
          <div class="card-body add-products">
            <div class="row gx-4">
              <div class="col-xxl-12 col-xl-12 col-lg-12 col-md-6">
                <div class="card custom-card shadow-none mb-0 border-0">
                  <div class="card-body p-0">
                    <div class="row gy-3">
                      <div class="col-xl-12">
                        <label for="product-cost-add" class="form-label"
                          ><span style="font-size: 15px"
                            ><b>Zone Details</b></span
                          ></label
                        >
                      </div>
                      <div class="col-xl-6">
                        <label for="zone_name" class="form-label">Zone Name</label>
                        <input type="text" class="form-control" id="zone_name" name="zone_name" placeholder="Enter zone name" required />
                      </div>
                      <div class="col-xl-6">
                        <label for="zone_status" class="form-label">Zone Status</label>
                        <select class="form-control" id="zone_status" name="zone_status" required>
                          <option value="">Select Status</option>
                          <option value="Active">Active</option>
                          <option value="Inactive">Inactive</option>
                        </select>
                      </div>
                      <div class="col-xl-6">
                        <label for="zone_launched_by" class="form-label">Launched By</label>
                        <input type="text" class="form-control" id="zone_launched_by" name="zone_launched_by" placeholder="Enter launcher name" />
                      </div>
                      <div class="col-xl-6">
                        <label for="zone_contact_number" class="form-label">Contact Number</label>
                        <input type="tel" class="form-control" id="zone_contact_number" name="zone_contact_number" placeholder="Enter contact number" required />
                      </div>
                      <div class="col-xl-6">
                        <label for="zone_email_id" class="form-label">Email ID</label>
                        <input type="email" class="form-control" id="zone_email_id" name="zone_email_id" placeholder="Enter email address" required />
                      </div>
                      <div class="col-xl-6">
                        <label for="date_of_publishing" class="form-label">Publishing Date</label>
                        <input type="date" class="form-control" id="date_of_publishing" name="date_of_publishing" />
                      </div>
                      <div class="col-xl-6">
                        <label for="zone_logo" class="form-label">Zone Logo</label>
                        <input type="file" class="form-control" id="zone_logo" name="zone_logo" accept="image/jpeg,image/png,image/jpg" />
                        <div id="imagePreview" class="mt-2" style="display: none;">
                          <img id="preview" src="" alt="Logo Preview" style="max-width: 200px; max-height: 200px;" />
                        </div>
                      </div>
                      <div class="col-xl-12 mt-4">
                        <button type="submit" class="btn btn-primary">Add Zone</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
